---
import BlogCard from "@/components/BlogCard.astro";
import ImageMod from "@/components/ImageMod.astro";
import Social from "@/components/Social.astro";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { slugify } from "@/lib/utils/textConverter";
import { render } from "astro:content";
import type { Language } from "../../../types/language.type";

// get all static paths for authors (for all languages at once!)
export async function getStaticPaths() {
  var paths = new Array();
  for (var lang of ["en", "nl"]) {
    const COLLECTION_FOLDER = ((lang == "nl") ? "authorsNL" : "authorsEN");
    const authors = await getSinglePage(COLLECTION_FOLDER);

    const paths2 = authors.map((author) => ({
        params: {
          single: author.id,
          lang: lang,
        },
        props: { author },
      }));
    paths = paths.concat(paths2);
  }
  return paths;
}

const author = Astro.props.author;
const lang = Astro.params.lang as Language;
const { title, social, meta_title, description, image } = author.data;
const { Content } = await render(author);

const BLOG_FOLDER = ((lang == "nl") ? "blogNL" : "blogEN");

// get all posts by author
const posts = await getSinglePage(BLOG_FOLDER);
const postFilterByAuthor = posts.filter(
  (post) => slugify(post.data.author) === slugify(title)
);
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="section-sm pb-0">
    <div class="container">
      <div
        class="row justify-center border-b border-border pb-14 dark:border-darkmode-border"
      >
        <div class="text-center lg:col-4">
          {
            image && (
              <ImageMod
                src={image}
                class="mx-auto mb-10 rounded"
                height={200}
                width={200}
                alt={title}
                format="webp"
              />
            )
          }
          <h1 class="h3 mb-6">{title}</h1>
          <div class="content">
            <Content />
          </div>
          <Social source={social} className="social-icons" />
        </div>
      </div>

      <div class="row justify-center pb-16 pt-14">
        {
          postFilterByAuthor.map((post) => (
            <div class="mb-12 md:col-6 lg:col-4">
              <BlogCard data={post} />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
